<Window x:Class="MemoryGame2.Views.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGame2.Views"
        mc:Ignorable="d"
        Title="Statistics" Height="300" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Game Statistics" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <ListBox x:Name="StatsList" Height="180"/>
            <Label x:Name="TotalStatsLabel" Content="Câștiguri: 0 | Pierderi: 0" HorizontalAlignment="Center" Margin="10"/>
            <Button Content="Close" HorizontalAlignment="Right" Width="80" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>

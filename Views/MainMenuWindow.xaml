<Window x:Class="MemoryGame2.Views.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGame2.Views"
        mc:Ignorable="d"
        Title="Main Menu" Height="300" Width="400">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
        <TextBlock Text="Main Menu" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
        <Button Content="New Game" Click="NewGame_Click" Margin="5"/>
        <Button Content="Load Game" Click="LoadGame_Click" Margin="5"/>
        <Button Content="Statistics" Click="Statistics_Click" Margin="5"/>
        <Button Content="Exit" Click="Exit_Click" Margin="5"/>
    </StackPanel>
</Window>
